<%= stylesheet_link_tag 'welcome'%>

<%= image_tag "dino-reichmuth-A5rCN8626Ck-unsplash.jpg", class: "img-fluid", alt: "Responsive image" %>

<div class="content">
<% if user_signed_in? %>
    <!--The url is "root_url" because at this stage we didn't establish the Desination routes.-->
    <%= form_for @destination, class: "form-inline", url: root_url do |f| %>
        <h1 class="title">Plan your next trip</h1>
        <div class="row">
            <div class="col">
                <p><%= f.text_field :arriving_to, placeholder: "Which destination would you like to explore next?", class: "form-control form-control-lg", id: "inlineFormInput" %></p>
            </div>
            <p><%= f.submit "Let's go!", id: "btn", class: "btn btn-primary btn-lg"%></p>
        </div>
    <% end %>

<% else !user_signed_in? %>

<div class="acnt">
    <h1>To start planning your trip,<br>you need to have an account!</h1>
    <div class="btn">
    <div class="btn-l">
        <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-primary btn-lg" %>
    </div>
    <div class="btn-r">
        <%= link_to "Log In", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
    </div>
    </div>
</div>

<% end %>

<h3 class="sug-place">Suggested Places</h3>
